{
  "manifest_version": 3,
  "name": "漂浮小方塊插件",
  "version": "1.0",
  "description": "在網頁上顯示一個可拖拽的漂浮小方塊",
  
  "permissions": [
    "activeTab",
    "storage"
  ],

  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "漂浮小方塊"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content/content.html"],
      "matches": ["<all_urls>"]
    }
  ]
}